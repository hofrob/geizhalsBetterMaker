{
	"manifest_version": 2,

	"name": "Geizhals BetterMaker",
	"description": "Makes Geizhals at least 3 times as better.",
	"version": "1.0",

	"options_page": "options.html",
	"content_scripts": [{
		"matches": [
			"http://*.geizhals.at/*",
			"http://*.geizhals.de/*",
			"http://*.geizhals.eu/*"
		],
		"css": [
			"jquery-ui-1.10.3.custom.min.css",
			"jquery.fancybox.css",
			"jquery.fancybox-thumbs.css",
			"bettermaker.css"
		],
		"js": [
			"jquery-2.0.0.min.js",
			"jquery-ui-1.10.3.custom.min.js",
			"jquery.fancybox.pack.js",
			"jquery.mousewheel-3.0.6.pack.js",
			"jquery.fancybox-thumbs.js",
			"main.js",
			"kategorien.js",
			"artikel.js",
			"tabs.js"
		]
	}],
	"background": {
		"scripts": [
			"jquery-2.0.0.min.js",
			"main.js",
			"preisagent.js"
		],
		"persistent": false
	},
	"web_accessible_resources": [
		"images/blank.gif",
		"images/stern_hover.png",
		"images/stern_hell.png",
		"images/stern_leer.png",
		"images/preisagent_16.png",
		"images/preisagent_32.png",
		"images/preisagent_on.png",
		"images/preisagent_off.png",
		"images/fancybox_sprite.png",
		"images/fancybox_loading.gif",
		"images/fancybox_overlay.png",
		"images/ui-bg_flat_0_aaaaaa_40x100.png",
		"images/ui-bg_flat_55_fbec88_40x100.png",
		"images/ui-bg_glass_75_d0e5f5_1x400.png",
		"images/ui-bg_glass_85_dfeffc_1x400.png",
		"images/ui-bg_glass_95_fef1ec_1x400.png",
		"images/ui-bg_gloss-wave_55_5c9ccc_500x100.png",
		"images/ui-bg_inset-hard_100_f5f8f9_1x100.png",
		"images/ui-bg_inset-hard_100_fcfdfd_1x100.png",
		"images/ui-icons_217bc0_256x240.png",
		"images/ui-icons_2e83ff_256x240.png",
		"images/ui-icons_469bdd_256x240.png",
		"images/ui-icons_6da8d5_256x240.png",
		"images/ui-icons_cd0a0a_256x240.png",
		"images/ui-icons_d8e7f3_256x240.png",
		"images/ui-icons_f9bd01_256x240.png",
		"kategorien.json"
	],
	"permissions": [
		"http://*.geizhals.at/*",
		"http://*.geizhals.de/*",
		"http://*.geizhals.eu/*",
		"storage",
		"notifications",
		"alarms"
	]
}